\DeclareOptionBeamer{butsansserifmath}[]{\def\mathfamilydefault{\sfdefault}\beamer@sansmathtrue}
\DeclareOptionBeamer{butsansserifsmall}[]{\setbeamerfont{tiny structure}{family=\sffamily}}
\DeclareOptionBeamer{butsansseriflarge}[]{\setbeamerfont{structure}{family=\sffamily}}
\DeclareOptionBeamer{butsansseriftext}[]{\def\familydefault{\sfdefault}}

\DeclareOptionBeamer{onlymath}[]{
  \setbeamerfont{tiny structure}{family=\sffamily}
  \setbeamerfont{structure}{family=\sffamily}
  \def\familydefault{\sfdefault}
}

\setbeamerfont{tiny structure}{family=\rmfamily}
\setbeamerfont{structure}{family=\rmfamily}
\def\familydefault{\rmdefault}

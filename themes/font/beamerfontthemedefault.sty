\usefonttheme{sizes}

\setbeamerfont{title}{inheritsfrom=structure}
\setbeamerfont{subtitle}{inheritsfrom=title}
\setbeamerfont{partname}{inheritsfrom=structure}
\setbeamerfont{section in toc}{inheritsfrom=structure}

\setbeamerfont{headline}{inheritsfrom={tiny structure}}
\setbeamerfont{footline}{inheritsfrom={tiny structure}}
\setbeamerfont{sidebar}{inheritsfrom={tiny structure}}

\setbeamerfont{frametitle}{inheritsfrom=structure}
\setbeamerfont{framesubtitle}{inheritsfrom=frametitle}

\setbeamerfont{caption head}{inheritsfrom={structure,caption}}

\setbeamerfont{block head}{inheritsfrom={structure,block}}
\setbeamerfont{block head boxed}{inheritsfrom={structure,block}}

\setbeamerfont{item}{inheritsfrom=structure}

\setbeamerfont{projected text}{inheritsfrom={tiny structure}}
\setbeamerfont{item projected}{inheritsfrom={item,projected text}}
\setbeamerfont{section number projected}{inheritsfrom={section in toc,projected text}}


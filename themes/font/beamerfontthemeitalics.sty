  \setbeamerfont{structure}{shape=\itshape,family=\rmfamily}
  \setbeamerfont{block head}{size={}}
}
\def\beamer@ftb@tstr{\setbeamerfont{tiny structure}{shape=\itshape,family=\rmfamily}}

\DeclareOptionBeamer{onlytinystructure}{\let\beamer@ftb@str=\relax}
\DeclareOptionBeamer{onlystructure}{\let\beamer@ftb@tstr=\relax}

\ProcessOptionsBeamer

\mode<presentation>

\beamer@ftb@str
\beamer@ftb@tstr

\mode
<all>


\newif\ifbeamer@sidebartab
\newif\ifbeamer@sidebardark

\beamer@sidebartabfalse
\beamer@sidebardarkfalse

\PassOptionsToPackage{width=2.5cm}{beamerlayoutthemesidebar}

\DeclareOptionBeamer{width}{\PassOptionsToPackage{width=#1}{beamerlayoutthemesidebar}}
\DeclareOptionBeamer{tab}[true]{\csname beamer@sidebartab#1\endcsname}
\DeclareOptionBeamer{dark}[true]{\csname beamer@sidebardark#1\endcsname}

\ProcessOptionsBeamer

\mode<presentation>

\ifbeamer@sidebardark
  \usefonttheme{bold}
  \ifbeamer@sidebartab
    \usecolortheme{sidebardark}
    \setbeamercolor{sidebar top}{use=structure,bg=black}
    \setbeamercolor{sidebar bottom}{use=structure,bg=structure.fg}

    \setbeamercolor*{frametitle}{use=structure,fg=structure.fg}
  \else
    \usecolortheme{sidebardark}
    \setbeamercolor{section in sidebar}{use=structure,fg=structure.fg!80}
    \setbeamercolor*{section in sidebar current}{fg=white}

    \setbeamercolor{subsection in sidebar}{fg=black!50}
    \setbeamercolor*{subsection in sidebar current}{fg=white}

    \setbeamercolor{sidebar top}{use=structure,bg=black}
    \setbeamercolor{sidebar bottom}{use=structure,bg=structure.fg}

    \setbeamercolor*{frametitle}{use=structure,fg=structure.fg}
  \fi
\else  
  \ifbeamer@sidebartab
    \setbeamercolor{section in sidebar}{use=structure,fg=structure.fg}
    \setbeamercolor*{section in sidebar current}{parent=section in sidebar,bg=black!25}

    \setbeamercolor{subsection in sidebar}{fg=black}
    \setbeamercolor*{subsection in sidebar current}{fg=black,bg=black!25}

    \setbeamercolor{sidebar top}{use=structure,bg=white!95!structure.fg}
    \setbeamercolor{sidebar bottom}{use=structure,bg=structure.fg!90!white}
  \else
    \setbeamercolor{section in sidebar}{use=structure,fg=structure.fg!75}
    \setbeamercolor*{section in sidebar current}{fg=black}

    \setbeamercolor{subsection in sidebar}{fg=black!50}
    \setbeamercolor*{subsection in sidebar current}{fg=black}

    \setbeamercolor{sidebar bottom}{bg=white}
    \setbeamercolor{sidebar top}{use=structure,bg=structure.fg!50!bg}
  \fi
\fi

\uselayouttheme[right,height=0pt]{sidebar}

\mode
<all>


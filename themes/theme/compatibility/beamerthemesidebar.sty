\newif\ifbeamer@sidebartab
\newif\ifbeamer@sidebardark

\beamer@sidebartabfalse
\beamer@sidebardarkfalse

\PassOptionsToPackage{width=2.5cm}{beamerlayoutthemesidebar}

\DeclareOptionBeamer{width}{\PassOptionsToPackage{width=#1}{beamerlayoutthemesidebar}}
\DeclareOptionBeamer{tab}[true]{\csname beamer@sidebartab#1\endcsname}
\DeclareOptionBeamer{dark}[true]{\csname beamer@sidebardark#1\endcsname}

\ProcessOptionsBeamer

\mode<presentation>

\ifbeamer@sidebardark
  \usefonttheme{bold}
  \ifbeamer@sidebartab
    \PassOptionsToPackage{%
      right,%
      height=0pt,%
      sidebarshade={{beamerstructure}{black}}}%
     {beamerlayoutthemesidebar}
  \else
    \PassOptionsToPackage{%
      right,%
      height=0pt,%
      tabcolor={},%
      sectioncolor={{white}{beamerstructure!80}},
      subsectioncolor={{white}{black!50}},
      sidebarshade={{beamerstructure}{black}}}%
     {beamerlayoutthemesidebar}
   \fi
\else  
  \ifbeamer@sidebartab
    \PassOptionsToPackage{%
      right,%
      height=0pt,%
      tabcolor={black!25},%
      titlecolor=beamerstructure,
      authorcolor=black,
      sectioncolor={{beamerstructure}{beamerstructure}},
      subsectioncolor={{black}{black}},
      sidebarshade={{beamerstructure!90!white}{white!95!beamerstructure}}}%
     {beamerlayoutthemesidebar}
  \else
    \PassOptionsToPackage{%
      right,%
      height=0pt,%
      titlecolor=beamerstructure,
      authorcolor=black,
      tabcolor={},%
      sectioncolor={{black}{beamerstructure!75}},
      subsectioncolor={{black}{black!50}},
      sidebarshade={{white}{beamerstructure!50!averagebackgroundcolor}}%
      }%
     {beamerlayoutthemesidebar}
  \fi
\fi

\uselayouttheme{sidebar}

\mode
<all>


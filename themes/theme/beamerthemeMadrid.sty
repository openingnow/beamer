\usetheme[footheight=6pt,headheight=6pt]{boxes}

\newif\ifbeamer@secheader
\beamer@secheaderfalse

\DeclareOptionBeamer{secheader}{\beamer@secheadertrue}
\ProcessOptionsBeamer




\addfootboxtemplate%
    {\color{structure}}%
    {\color{averagebackgroundcolor}\hfill\tiny\raisebox{-2pt}{\insertshortauthor~~(\insertshortinstitute)}\hfill}
\addfootboxtemplate%
    {\color{structure!70!averagebackgroundcolor}}%
    {\color{averagebackgroundcolor}\hfill\tiny\raisebox{-2pt}{\insertshorttitle}\hfill}
\addfootboxtemplate%
    {\color{structure!50!averagebackgroundcolor}}%
    {\color{black!50!structure}\hfill\tiny\raisebox{-2pt}{\insertdate{}
        \hspace*{2em} \insertframenumber{} /
        \inserttotalframenumber}\hspace*{1ex}} 

\ifbeamer@secheader
\addheadboxtemplate%
    {\color{beamerstructure!70!averagebackgroundcolor}}%
    {\color{white}\hfill\tiny\raisebox{-2pt}{\insertsection}\hfill}
\addheadboxtemplate%
    {\color{beamerstructure!30!averagebackgroundcolor}}%
    {\color{white}\hfill\tiny\raisebox{-2pt}{\hfill\insertsubsection}\hfill}
\else
{}
\fi


\newif\ifbeamer@sidebartab
\beamer@sidebartabfalse

\PassOptionsToPackage{right}{beamerlayoutthemesidebar}
\PassOptionsToPackage{width=2cm}{beamerlayoutthemesidebar}

\DeclareOptionBeamer{hideothersubsections}{\PassOptionsToPackage{hideothersubsections=#1}{beamerlayoutthemesidebar}}
\DeclareOptionBeamer{hideallsubsections}{\PassOptionsToPackage{hideallsubsections=#1}{beamerlayoutthemesidebar}}

\DeclareOptionBeamer{width}{\PassOptionsToPackage{width=#1}{beamerlayoutthemesidebar}}
\DeclareOptionBeamer{left}{\PassOptionsToPackage{left}{beamerlayoutthemesidebar}}
\DeclareOptionBeamer{right}{\PassOptionsToPackage{right}{beamerlayoutthemesidebar}}
\DeclareOptionBeamer{tab}[true]{\csname beamer@sidebartab#1\endcsname}
\ProcessOptionsBeamer

\mode<presentation>

\usecolortheme{sidebardark}

\ifbeamer@sidebartab
  \setbeamercolor{section in sidebar current}{use=structure,bg=structure.fg!85}
\else
  \setbeamercolor{section in sidebar}{use=structure,fg=structure.fg!80}
  \setbeamercolor*{section in sidebar current}{fg=white}

  \setbeamercolor{subsection in sidebar}{fg=black!50}
  \setbeamercolor*{subsection in sidebar current}{fg=white}
\fi  

\setbeamercolor*{frametitle}{use=structure,fg=structure.fg}

\setbeamercolor{sidebar top}{bg=black}
\setbeamercolor{sidebar bottom}{use=structure,bg=structure.fg}

\uselayouttheme[height=0pt]{sidebar}

\mode
<all>

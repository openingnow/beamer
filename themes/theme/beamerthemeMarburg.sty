\newif\ifbeamer@sidebartab
\beamer@sidebartabfalse

\PassOptionsToPackage{right}{beamerlayoutthemesidebar}
\PassOptionsToPackage{width=2cm}{beamerlayoutthemesidebar}

\DeclareOptionBeamer{hideothersubsections}{\PassOptionsToPackage{hideothersubsections=#1}{beamerlayoutthemesidebar}}
\DeclareOptionBeamer{hideallsubsections}{\PassOptionsToPackage{hideallsubsections=#1}{beamerlayoutthemesidebar}}

\DeclareOptionBeamer{width}{\PassOptionsToPackage{width=#1}{beamerlayoutthemesidebar}}
\DeclareOptionBeamer{left}{\PassOptionsToPackage{side=left}{beamerlayoutthemesidebar}}
\DeclareOptionBeamer{right}{\PassOptionsToPackage{side=right}{beamerlayoutthemesidebar}}
\DeclareOptionBeamer{side}{\PassOptionsToPackage{side=#1}{beamerlayoutthemesidebar}}
\DeclareOptionBeamer{tab}[true]{\csname beamer@sidebartab#1\endcsname}
\ProcessOptionsBeamer

\mode<presentation>

\ifbeamer@sidebartab
  \PassOptionsToPackage{tabcolor=beamerstructure!85!white}{beamerlayoutthemesidebar}
\else
  \PassOptionsToPackage{%
    tabcolor={},%
    sectioncolor={{white}{beamerstructure!80}},
    subsectioncolor={{white}{black!50}}}{beamerlayoutthemesidebar}
\fi  

\uselayouttheme[height=0pt,sidebarshade={{beamerstructure}{black}}]{sidebar}

\mode
<all>

\mode<presentation>

\beamertemplatelightsectionheads
\beamertemplatecircleminiframeinverted

                                % Head
\useheadtemplate{%
  \vbox{%
    \colouredline{beamerstructure}{\hskip-0.3cm\insertnavigation{\paperwidth}\hskip-0.3cm}%
    \tinycolouredline{beamerstructure!75!white}{\color{white}\usebeamerfont{subsection in head/foot}\insertsubsection\hfill}}%
}

                                % Footline
\usefoottemplate{%
  \vbox{%
    \hbox to\textwidth{\hfill%
      \setbox\beamer@logobox=\hbox{\raise 2pt\hbox{\insertlogo}}\ht\beamer@logobox=0pt%
      \box\beamer@logobox\hskip-\Gm@rmargin\hskip0.1cm}\vskip2pt%
    \tinycolouredline{beamerstructure!75}{%
      \color{white}%
      {\usebeamerfont{author in head/foot}\insertshortauthor}\hfill%
      \ifx\insertlogo\@empty%
        {\usebeamerfont{institute in head/foot}\insertshortinstitute}%
      \fi}%
    \tinycolouredline{beamerstructure}{%
      \color{white}%
      {\usebeamerfont{title in head/foot}\insertshorttitle}\hfill\lower1pt\hbox{\insertnavigationsymbols}%
  }}}

                                % Color of navigation symbols
\def\beamernavigationcolorlight{beamerstructure!65!white}
\def\beamernavigationcolorstrong{beamerstructure!50!white}

